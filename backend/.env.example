# Django Configuration
# Set to True for development, False for production
DEBUG=True

# For production generate a secure key using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# Otherwise 'SECRET_KEY=mysecretkey' works
SECRET_KEY=your-secret-key-here

# Django settings module path
DJANGO_SETTINGS_MODULE=apps.config.settings

# Database Configuration
# Format: postgres://{user}:{password}@{host}:{port}/{db_name}
# Development example
DATABASE_URL=postgres://username:password@cloudsql-proxy:5432/database_name

# Host Configuration
# Comma-separated list of allowed hosts
# Development example
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# API Configuration
API_VERSION=v1

# Cloud SQL Configuration
# Get these values from Google Cloud Console
CLOUD_SQL_CONNECTION_NAME=north-sea-watch:europe-west4:ais-database

# Logging Configuration
LOG_LEVEL=DEBUG  # Options: CRITICAL, ERROR, WARNING, INFO, DEBUG

# Development Only Settings
DJANGO_DEVELOPMENT=True

# Note: This file will be updated as the project evolves
# Copy this file to .env and update the values according to your environment
# Do not commit the actual .env file to version control (not for now)
