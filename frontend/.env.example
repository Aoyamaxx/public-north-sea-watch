# API Configuration
# Backend API URL - Update according to your environment
REACT_APP_API_URL=http://localhost:8000/api/v1

# Environment Configuration
# Set to 'development' for development, 'production' for production
REACT_APP_ENV=development

# Authentication Configuration (for future implementation)
REACT_APP_AUTH_ENABLED=false
REACT_APP_AUTH_URL=http://localhost:8000/auth

# Feature Flags (add as needed during development)
REACT_APP_FEATURE_MAPS=true
REACT_APP_FEATURE_REALTIME=false

# Map Configuration
# Choose your map provider (mapbox/google) and add corresponding API key
REACT_APP_MAP_PROVIDER=mapbox
REACT_APP_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
# REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox Configuration
REACT_APP_MAPBOX_STYLE=mapbox://styles/mapbox/streets-v11
# Optional Mapbox configurations
REACT_APP_MAPBOX_CENTER_LAT=51.5074  # Default center latitude
REACT_APP_MAPBOX_CENTER_LNG=-0.1278  # Default center longitude
REACT_APP_MAPBOX_ZOOM=9              # Default zoom level

# WebSocket Configuration (for future real-time features)
REACT_APP_WS_URL=ws://localhost:8000/ws

# Analytics Configuration (for future implementation)
REACT_APP_ANALYTICS_ID=your-analytics-id

# Error Reporting (for future implementation)
# REACT_APP_SENTRY_DSN=your-sentry-dsn

# Note: This file will be updated as the project evolves
# Copy this file to .env and update the values according to your environment
# Do not commit the actual .env file to version control (not for now)
# All environment variables must start with REACT_APP_ to be accessible in React
